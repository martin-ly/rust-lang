# 开发环境Dockerfile
FROM rust:1.90-slim

# 安装开发依赖
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libclang-dev \
    cmake \
    build-essential \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# 安装开发工具
RUN cargo install cargo-watch cargo-expand

# 设置工作目录
WORKDIR /app

# 复制Cargo文件
COPY Cargo.toml Cargo.lock ./

# 创建虚拟main.rs来缓存依赖
RUN mkdir src && echo "fn main() {}" > src/main.rs

# 构建依赖
RUN cargo build --features basic-ai
RUN rm -rf src

# 复制源代码
COPY . .

# 构建应用
RUN cargo build --features basic-ai

# 暴露端口
EXPOSE 8080

# 设置环境变量
ENV RUST_LOG=debug
ENV RUST_BACKTRACE=1

# 开发模式命令
CMD ["cargo", "run", "--features", "basic-ai"]
